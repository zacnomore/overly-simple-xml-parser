{
  "compilerOptions": {
    "module": "ES6",
    "target": "ES5",
    // "lib": ["ES2015", "DOM"],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "strict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}